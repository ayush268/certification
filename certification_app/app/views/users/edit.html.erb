<% provide(:title, "Edit Profile") %>
<section id="contact" class="section-bg wow" style="visibility:visible;">
  <div class="container">
    <div class="section-header">
      <h2> Edit Profile </h2>
    </div>

    <div class="form">
        <%= form_tag(controller: 'users', action: 'update', method: 'post') do %>
          <div class="form-group col-md-6 col-md-offset-3">
            <%= label_tag(:name, "Name") %>
            <%= text_field_tag(:name, params[:name], class: "form-control") %>
          </div>
          <div class="form-group col-md-6 col-md-offset-3">
            <%= label_tag(:username, "Username") %>
            <%= text_field_tag(:username, params[:username], class: "form-control") %>
          </div>
          <div class="form-group col-md-6 col-md-offset-3">
            <%= label_tag(:email, "Email") %>
            <%= email_field_tag(:email, params[:email], class: "form-control") %>
          </div>
          <div class="text-center">
          <%= submit_tag "Update", {:class =>"btn btn-primary"} %>
        </div>
        <% end %>
    </div>
  </div>
</section>
