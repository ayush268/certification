<% provide(:title, "Course Requests") %>
<h1> Course Requests </h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
		<%= form_tag(controller: 'admin', action: 'submit', method: 'post') do %>
      <div class="row">
        <%= collection_check_boxes(:courses_accepted, :id, @courses, :id, :get_course_info) do |b| %>
          <%= b.label %>
          <%= b.check_box %>
        <% end %>
        <%= submit_tag "Approve Requests", {:class =>"fancy-button"} %>
      </div>
    <% end %>
  </div>
</div>
